#include <iostream>
#include <vector>
#include <bits/stdc++.h>
#define inf INT_MAX
using namespace std;
vector<int>dp;
int f(int n) {
    if(dp[n]!=-1) return dp[n];
    if (n == 1) return 0;
    if (n == 2 || n == 3) return 1;
    
    return  dp[n]=1 + min({
        f(n - 1),
        (n % 2 == 0) ? f(n / 2) : inf,
        (n % 3 == 0) ? f(n / 3) : inf
    });
}

int main() {
    dp.clear();
    dp.resize(1005,-1);
    int n;
    cin >> n;
    cout << f(n) << "\n";
    return 0;
}
