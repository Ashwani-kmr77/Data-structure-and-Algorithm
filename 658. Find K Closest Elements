class Solution {
public:
    vector<int> findClosestElements(vector<int>& arr, int k, int x) {
        int n = arr.size();
        vector<int> ans(k);
        if (x < arr[0]) {
            for (int i = 0; i < k; i++) {
                ans[i] = arr[i];
            }
            return ans;
        }
        if (x > arr[n - 1]) {
            int i = n - 1;
            int j = k - 1;
            while (j >= 0) {
                ans[j] = arr[i];
                j--;
                i--;
            }
            return ans;
        }
        int low = 0;
        int high = n - 1;
        bool flag = false; // if x is not  present in array
        int t = 0;
        int mid = -1;
        while (low <= high) {
            mid = low + (high - low) / 2;
            if (arr[mid] == x) {
                flag = true;
                ans[t] = arr[mid];
                t++;
                break;
            } else if (arr[mid] > x) {
                high = mid - 1;
            } else
                low = mid + 1;
        }
        int lb = high;
        int up = low;
        if (flag == true) {
            lb = mid - 1;
            up = mid + 1;
        }
        while (t < k && lb >= 0 && up <= n - 1) {
            int d1 = abs(x - arr[lb]);
            int d2 = abs(x - arr[up]);
            if (d1 <= d2) {
                ans[t] = arr[lb];
                t++;
                lb--;
            } else {
                ans[t] = arr[up];
                t++;
                up++;
            }
        }
        if (lb < 0) {
            while (t < k) {
                ans[t] = arr[up];
                up++;
                t++;
            }
        }
        if (up > n - 1) {
            while (t < k) {
                ans[t] = arr[lb];
                lb--;
                t++;
            }
        }
        sort(ans.begin(), ans.end());
        return ans;
    }
};
