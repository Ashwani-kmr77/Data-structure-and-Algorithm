// we use binary search beacuse the row and col is sorted 
class Solution {
public:
    int counlessthanequal(vector<vector<int>>& matrix,int mid ,int n)
    {
        int count = 0;
        int row = n-1;
        int col =0;
        while(row>=0 && col<n){
            if(matrix[row][col]<=mid){
                 count +=row+1;
                  col++;
            }
            else{
             row--;
            }

        }
        return count;
    }
    int kthSmallest(vector<vector<int>>& matrix, int k) {
        
        int n = matrix.size();

        int left  = matrix[0][0];
        int right =matrix[n-1][n-1];


         // apply binary search condition 
        while(left < right){
            int  mid = left +(right -left)/2;
             int count = counlessthanequal(matrix,mid,n);

              if(count<k){
                   left = mid+1;
                }
              else{
                   right = mid;
                }
            }
         return left ;
    }
};
