 class Solution {
 public:
    vector<string>result;
   
    void solve(string &curr,int n,int open,int close){
         if(curr.length()==2*n){
            result.push_back(curr);
          return ; 
        }
     // do 
      if(open<n){
      curr.push_back('(');
      // explore
      solve(curr,n,open+1,close);
      // undo 
      curr.pop_back();
      }
       // do 
       // add only close brakets if it is less than open 
       if(close<open){
      curr.push_back(')');
      // explore 
      solve(curr,n,open,close+1);
      // undo
      curr.pop_back();
       }
    }

    
    vector<string> generateParenthesis(int n) {
    
     string curr = "";
       
       int open =0;
       int close =0;

      solve(curr,n,open,close);
      return result;
        
    }
};
